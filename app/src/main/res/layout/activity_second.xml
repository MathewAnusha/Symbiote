<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2"
    android:background="#110A21">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:background="@drawable/running"
                            android:gravity="bottom"
                            android:text="SYMBIOT"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/colorFlower"
                            android:textSize="35sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                                <LinearLayout
                                    android:id="@+id/first"
                                    android:layout_width="86dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:background="#a93226"
                                    android:orientation="vertical"

                                    >

                                        <ImageView
                                            android:id="@+id/Activity"
                                            android:layout_width="79dp"
                                            android:layout_height="83dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="20dp"
                                            android:src="@drawable/add"


                                            />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_marginTop="30dp"
                                            android:background="#922b21"
                                            android:padding="8dp"
                                            android:text="Enter Activity"
                                            android:textAlignment="center"
                                            android:textColor="@color/colourWhite"
                                            android:textSize="18sp"

                                            />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/second"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:background="@color/colorBitterSweet"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="84dp"
                                            android:layout_height="86dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="20dp"
                                            android:src="@drawable/schedule"
                                            android:tint="@color/colourWhite" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="30dp"
                                            android:background="@color/colorBitterSweetDark"
                                            android:padding="8dp"
                                            android:text="Schedule"
                                            android:textAlignment="center"
                                            android:textColor="@color/colourWhite"
                                            android:textSize="18sp" />

                                </LinearLayout>


                        </LinearLayout>

                        <!-- Second Row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                                <LinearLayout
                                    android:id="@+id/third"
                                    android:layout_width="2dp"
                                    android:layout_height="158dp"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:background="@color/colorGrass"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="121dp"
                                            android:layout_height="68dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="20dp"
                                            android:src="@drawable/profile"

                                            />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="30dp"
                                            android:background="@color/colorGrassDark"
                                            android:padding="8dp"
                                            android:text="Profile"
                                            android:textAlignment="center"
                                            android:textColor="@color/colourWhite"
                                            android:textSize="18sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/fourth"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:background="#17a589"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="120dp"
                                            android:layout_height="68dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="20dp"
                                            android:src="@drawable/reset"

                                            />

                                        <TextView
                                            android:layout_width="187dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="30dp"
                                            android:background="#148f77"
                                            android:padding="8dp"
                                            android:text="Reset PIN"
                                            android:textAlignment="center"
                                            android:textColor="@color/colourWhite"
                                            android:textSize="18sp" />

                                </LinearLayout>


                        </LinearLayout>
                        <!-- End Second Row-->
                        <!-- Third Row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                                <LinearLayout
                                    android:id="@+id/fifth"
                                    android:layout_width="111dp"
                                    android:layout_height="160dp"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:background="#f39c12"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="94dp"
                                            android:layout_height="70dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="20dp"
                                            android:src="@drawable/overview"

                                            />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="30dp"
                                            android:background=" #d68910"
                                            android:padding="8dp"
                                            android:text="OverView"
                                            android:textAlignment="center"
                                            android:textColor="@color/colourWhite"
                                            android:textSize="18sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/sixth"
                                    android:layout_width="110dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:background="@color/colorLavander"
                                    android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="91dp"
                                            android:layout_height="70dp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="20dp"
                                            android:src="@drawable/aboutus"

                                            />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="30dp"
                                            android:background="@color/colorLavanderDark"
                                            android:padding="8dp"
                                            android:text="About Us"
                                            android:textAlignment="center"
                                            android:textColor="@color/colourWhite"
                                            android:textSize="18sp" />

                                </LinearLayout>


                        </LinearLayout>
                        <!-- End Third Row-->

                </LinearLayout>

        </ScrollView>



</LinearLayout>